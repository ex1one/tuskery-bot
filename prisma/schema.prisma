generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id             Int      @id @default(autoincrement())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  name           String?
  role           String   @default("USER")

  ts_tasks  Task[]
}

model Task {
  id        Int           @id @default(autoincrement())
  name      String        @default("")
  channelId Int?
  channel   Channel?   @relation(fields: [channelId], references: [id])
  state     TaskState?
  link      String?

  author   String?
  assignee String?
  body     String  @default("")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tags   Tag[]

  User   User?    @relation(fields: [userId], references: [id])
  userId Int?
}

model Channel {
  id   Int    @id
  name String @default("")
  uri  String @default("")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tags  Tag[]
  tasks Task[]
}

model Tag {
  id        Int         @id @default(autoincrement())
  name      String      @default("")
  channelId Int?
  channel   Channel? @relation(fields: [channelId], references: [id])

  tasks Task[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([channelId, name])
}

enum TaskState {
  RESOLVED
  TO_BE_REVIEWED
}

